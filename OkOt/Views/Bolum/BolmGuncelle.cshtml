@model OkOt.Models.Entities.Bolum
@{
    ViewBag.Title = "BolmGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bölüm Güncelle</h2>
<form class="form-horizontal" method="post" action="/Bolum/BolmGuncelle">
    @Html.Hidden("BolumKod")
    <div class="form-group">
        <label>Bölum Adı</label>
        @Html.TextBoxFor(x => x.BolumAdi, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Bölum Kontenjanı</label>
        @Html.TextBoxFor(x => x.BolumKontenjan, null, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />
</form>

