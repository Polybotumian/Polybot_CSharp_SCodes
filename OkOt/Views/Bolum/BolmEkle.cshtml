
@{
    ViewBag.Title = "BolmEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bölüm Ekle</h2>

<form class="form-horizontal" method="post" action="../Bolum/BolmEkle">
    <div class="form-group">
        <label>Bölüm Adı</label>
        <input type="text" class="form-control" name="BolumAdi" />
    </div>
    <div class="form-group">
        <label>Bölüm Kontenjanı</label>
        <input type="number" class="form-control" name="BolumKontenjan" />
    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />
</form>
