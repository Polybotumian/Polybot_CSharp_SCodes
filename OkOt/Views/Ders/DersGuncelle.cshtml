@model OkOt.Models.Entities.Dersler
@{
    ViewBag.Title = "DersGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ders Güncelle</h2>
<form class="form-horizontal" method="post" action="/Ders/DersGuncelle">
    @Html.Hidden("DersKod")
    <div class="form-group">
        <label>Ders Adı</label>
        @Html.TextBoxFor(x => x.DersAdi, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Teorik</label>
        @Html.TextBoxFor(x => x.DersTeorik, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Uygulama</label>
        @Html.TextBoxFor(x => x.DersUygulama, null, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />
</form>


