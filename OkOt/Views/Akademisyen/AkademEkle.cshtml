@model OkOt.Models.Entities.Akademisyen
@{
    ViewBag.Title = "AkademEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Akademisyen Ekle</h2>

<form class="form-horizontal" method="post" action="../Akademisyen/AkademEkle">
    <div class="form-group">
        <label>Ad</label>
        <input type="text" class="form-control" name="PersonelAdi" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input type="text" class="form-control" name="PersonelSoyadi" />
    </div>
    <div class="form-group">
        <label>Branşı</label>
        <input type="text" class="form-control" name="PersonelBransi" />
    </div>
    <div class="form-group">
        <label>Bölümü</label>
        @Html.DropDownListFor(x => x.PersonelBolum, ViewBag.Bolumler as SelectList, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Dogum Tarihi</label>
        <input type="text" class="form-control" name="PersonelTc" />
    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />
</form>

