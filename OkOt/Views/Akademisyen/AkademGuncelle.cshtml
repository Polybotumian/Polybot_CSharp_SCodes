@model OkOt.Models.Entities.Akademisyen
@{
    ViewBag.Title = "AkademGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Akademisyen Güncelle</h2>
<form class="form-horizontal" method="post" action="/Akademisyen/AkademGuncelle">
    @Html.Hidden("PersonelKod")
    <div class="form-group">
        <label>Ad</label>
        @Html.TextBoxFor(x => x.PersonelAdi, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Soyad</label>
        @Html.TextBoxFor(x => x.PersonelSoyadi, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(x => x.PersonelBolum, ViewBag.Bolumler as SelectList, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Dogum Tarihi</label>
        @Html.TextBoxFor(x => x.PersonelBransi, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Adres</label>
        @Html.TextBoxFor(x => x.PersonelTc, null, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />
</form>


