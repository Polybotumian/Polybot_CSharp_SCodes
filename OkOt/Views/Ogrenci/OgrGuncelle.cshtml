@model OkOt.Models.Entities.Ogrenci
@{
    ViewBag.Title = "OgrGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Öğrenci Güncelle</h2>
<form class="form-horizontal" method="post" action="/Ogrenci/OgrGuncelle">
    @Html.Hidden("OgrenciId");
    <div class="form-group">
        <label>Ad</label>
        @Html.TextBoxFor(x => x.OgrenciAdi, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Soyad</label>
        @Html.TextBoxFor(x => x.OgrenciSoyadi, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <select class="form-control" name="OgrenciCinsiyet">
            <option value="Erkek">Erkek</option>
            <option value="Kadın">Kadın</option>
        </select>
    </div>
    <div class="form-group">
        @Html.DropDownListFor(x => x.BolumOgrenci, ViewBag.Bolumler as SelectList, new { @class = "form-control"})
    </div>
    <div class="form-group">
        <label>Dogum Tarihi</label>
        @Html.TextBoxFor(x => x.OgrenciDogumTarihi, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Adres</label>
        @Html.TextBoxFor(x => x.OgrenciAdres, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>T.C. Kimlik No</label>
        @Html.TextBoxFor(x => x.OgrenciTc, null, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />
</form>
